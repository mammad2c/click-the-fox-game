{
  "name": "click-the-fox-game",
  "private": true,
  "version": "0.0.0",
  "engines": {
    "yarn": "<=v1.22.19",
    "node": ">= 12.x.x",
    "npm": "please use yarn to run this project"
  },
  "scripts": {
    "prepare": "husky install",
    "dev": "nodemon --watch '**/*.ts' --exec ts-node ./src/server/server.ts",
    "build": "tsc && vite build",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --outDir dist/server --ssr src/entry-server.tsx",
    "preview": "vite preview",
    "format": "prettier ./**/*.{ts,tsx,js,jsx,css,scss,md,json} --write",
    "lint": "eslint ./**/*.{ts,tsx,js,jsx} --fix",
    "lint-staged": "lint-staged",
    "test:unit": "vitest"
  },
  "dependencies": {
    "@chakra-ui/react": "^2.5.1",
    "@emotion/react": "^11.10.6",
    "@emotion/styled": "^11.10.6",
    "axios": "^1.3.4",
    "express": "^4.18.2",
    "framer-motion": "^10.0.1",
    "lodash.orderby": "^4.6.0",
    "lodash.shuffle": "^4.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.2",
    "sharp": "^0.31.3",
    "spritesmith": "^3.4.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@testing-library/dom": "^9.0.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/express": "^4.17.17",
    "@types/lodash.orderby": "^4.6.7",
    "@types/lodash.shuffle": "^4.2.7",
    "@types/mock-fs": "^4.13.1",
    "@types/node": "^18.14.2",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/sharp": "^0.31.1",
    "@types/spritesmith": "^3.4.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "@vitejs/plugin-react-swc": "^3.2.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "jsdom": "^21.1.0",
    "mock-fs": "^5.2.0",
    "msw": "^1.1.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.4",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "vite": "^4.1.4",
    "vitest": "^0.29.1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ],
    "*.{ts,tsx,js,jsx,css,scss,md,json}": "prettier --write"
  }
}
